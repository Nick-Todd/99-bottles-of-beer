def beer():
    for bottles in range(99,-1,-1):
	    if bottles > 2:
	        print(f"{bottles} bottles of beer on the wall, {bottles} bottles of beer. Take it down, pass it around, {bottles-1} bottles of beer on the wall!")
	    elif bottles == 2:
		    print(f"{bottles} bottles of beer on the wall, {bottles} bottles of beer. Take it down, pass it around, 1 bottle of beer on the wall!")
	    elif bottles == 0:
		    print(f"1 bottle of beer on the wall, 1 bottle of beer. Take it down, pass it around, no more bottles of beer on the wall!")

beer()
